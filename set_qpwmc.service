[Unit]
Description=Run set_qpmcw_mode on startup
Before=voice_call_receive.service

# https://serverfault.com/questions/1053369/systemd-how-to-start-service-after-another-service-started

[Service]
Type=oneshot
ExecStartPre=/usr/bin/sleep 40
ExecStart=/usr/bin/bash -c 'sudo %h/repos/remote-phone/set_qpwmc_mode.py'
# logs to: /tmp/set_qpcm_mode.log

[Install]
WantedBy=default.target
